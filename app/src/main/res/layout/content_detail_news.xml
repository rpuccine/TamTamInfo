<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail_news"
    tools:context="com.tamtam.tamtaminfo.DetailNewsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackRecItem"
        android:id="@+id/Container" >

        <TextView
            android:id="@+id/detailDate"
            android:textSize="13sp"
            android:paddingLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detailTitle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/detailCateg"
            android:background="@color/colorItem1"
            android:textSize="17sp"
            android:textColor="@color/colorNameCateg"
            android:padding="5dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/detailImg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </ImageView>

        <TextView
            android:id="@+id/detailCopyright"
            android:background="@color/colorItem1"
            android:textSize="14sp"
            android:textColor="@color/colorNameCateg"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detailBody"
            android:background="@color/colorNameCateg"
            android:textSize="15sp"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
